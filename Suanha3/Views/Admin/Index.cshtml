@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý Tin tức";
}

<!DOCTYPE html>
<html lang="vi" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        :root {
            --primary: #2563EB;
            --secondary: #059669;
            --accent: #DB2777;
            --bg-color: #ffffff;
            --text-color: #1f2937;
            --card-bg: #f9fafb;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        [data-theme="dark"] {
            --primary: #1E40AF;
            --secondary: #065F46;
            --accent: #BE185D;
            --bg-color: #1F2937;
            --text-color: #F3F4F6;
            --card-bg: #374151;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: var(--transition);
            font-family: 'Segoe UI', sans-serif;
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .theme-switcher {
            position: fixed;
            top: 1rem;
            right: 1rem;
            display: flex;
            gap: 0.5rem;
        }

            .theme-switcher button {
                background: none;
                border: none;
                cursor: pointer;
                font-size: 1.5rem;
                padding: 0.5rem;
                border-radius: 50%;
                transition: var(--transition);
            }

                .theme-switcher button:hover {
                    background: rgba(0,0,0,0.1);
                }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--primary);
        }

        .grid-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            padding: 1rem 0;
        }

        .admin-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 1.5rem;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid rgba(0,0,0,0.1);
        }

            .admin-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            }

        .card-header {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .card-icon {
            width: 40px;
            height: 40px;
            padding: 0.5rem;
            border-radius: 8px;
            background: var(--primary);
            color: white;
            transition: var(--transition);
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary);
            margin: 0;
        }

        .card-desc {
            color: var(--text-color);
            opacity: 0.9;
            line-height: 1.6;
        }

        /* Page transition */
        .page-loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-color);
            z-index: 9999;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .page-loader.active {
                opacity: 1;
            }
    </style>
</head>
<body>
    <div class="page-loader"></div>

    <div class="theme-switcher">
        <button data-theme="light">🌞</button>
        <button data-theme="dark">🌙</button>
    </div>

    <div class="container">
        <h1 class="page-title">Trang Quản Trị</h1>

        <div class="grid-container">
            <a href="/Admin/EditLayout" class="admin-card">
                <div class="card-header">
                    <svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <h3 class="card-title">Chỉnh sửa giao diện</h3>
                </div>
                <p class="card-desc">Tùy chỉnh bố cục và hình ảnh website</p>
            </a>

            <a href="/Admin/ManageContacts" class="admin-card">
                <div class="card-header">
                    <svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <h3 class="card-title">Quản lý liên hệ</h3>
                </div>
                <p class="card-desc">Xem và xử lý thông tin khách hàng liên hệ</p>
            </a>

            <a href="/Admin/ManageServices" class="admin-card">
                <div class="card-header">
                    <svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    <h3 class="card-title">Quản lý dịch vụ</h3>
                </div>
                <p class="card-desc">Cập nhật danh sách và thông tin dịch vụ</p>
            </a>

            <a href="/Admin/ManagePricing" class="admin-card">
                <div class="card-header">
                    <svg class="card-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h3 class="card-title">Chỉnh sửa đơn giá</h3>
                </div>
                <p class="card-desc">Cập nhật bảng giá các dịch vụ hiện có</p>
            </a>
        </div>
    </div>

    <script>
        // Theme switching
        const themeToggle = {
            init() {
                this.setInitialTheme();
                document.querySelectorAll('[data-theme]').forEach(btn => {
                    btn.addEventListener('click', () => this.setTheme(btn.dataset.theme));
                });
            },
            setTheme(theme) {
                document.documentElement.setAttribute('data-theme', theme);
                localStorage.setItem('admin-theme', theme);
            },
            setInitialTheme() {
                const savedTheme = localStorage.getItem('admin-theme') || 'light';
                this.setTheme(savedTheme);
            }
        };
        themeToggle.init();

        // Page transition
        document.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const loader = document.querySelector('.page-loader');
                loader.classList.add('active');

                setTimeout(() => {
                    window.location.href = link.href;
                }, 300);
            });
        });
    </script>
</body>
</html>