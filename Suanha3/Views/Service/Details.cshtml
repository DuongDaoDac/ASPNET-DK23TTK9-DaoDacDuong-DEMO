@model Suanha3.Models.Service
@{
    ViewBag.Title = Model.Title + " | Dịch vụ sửa chữa nhà Suanha347";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h1 class="text-3xl font-bold mb-3 text-gray-800">@Model.Title</h1>

    <div class="mb-4">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="rounded shadow" style="max-width: 100%; height: auto;">
    </div>

    <div class="mb-3 text-gray-600">
        <i class="fas fa-calendar-alt"></i> Ngày đăng: @Model.CreatedDate.ToString("dd/MM/yyyy")
    </div>

    <div class="prose max-w-full text-lg leading-relaxed">
        <p>@Model.Description</p>
    </div>

    <div class="mt-5">
        <a href="@Url.Action("Index", "Service")" class="btn btn-primary">⬅️ Quay lại danh sách</a>
    </div>
</div>
