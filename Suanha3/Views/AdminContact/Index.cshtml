@model IEnumerable<Suanha3.Models.Contact>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quản lý liên hệ khách hàng | Suanha347";
}

<div class="container py-4">
    <h1 class="mb-4">📨 Quản lý liên hệ khách hàng</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-hover bg-white">
            <thead class="table-light">
                <tr>
                    <th>Mã</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Nội dung</th>
                    <th>Ngày gửi</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contact in Model)
                {
                    <tr>
                        <td>@contact.Id</td>
                        <td>@contact.FullName</td>
                        <td>@contact.Email</td>
                        <td>@contact.Phone</td>
                        <td>@contact.Message</td>
                        <td>@contact.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a href="@Url.Action("Delete", "AdminContact", new { id = contact.Id })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bạn có chắc muốn xóa liên hệ này?');">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle"></i> Hiện chưa có liên hệ nào từ khách hàng.
        </div>
    }
</div>
