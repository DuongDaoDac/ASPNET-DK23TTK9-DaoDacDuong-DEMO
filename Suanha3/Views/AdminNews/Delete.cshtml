@model Suanha3.Models.News

<h2>Are you sure you want to delete this news?</h2>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Content</p>
</div>

@using (Html.BeginForm("Delete", "AdminNews", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "AdminNews")" class="btn btn-default">Cancel</a>
}
