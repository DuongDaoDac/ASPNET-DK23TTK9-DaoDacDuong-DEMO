@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="about-page">
    <!-- Hero Section -->
    <section class="about-hero">
        <div class="hero-overlay">
            <div class="container">
                <h1 class="hero-title">Công ty Xây Dựng 347</h1>
            </div>
        </div>
    </section>

    <!-- Introduction Section -->
    <section class="introduction-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h2 class="section-title">Về chúng tôi</h2>
                    <div class="title-divider"></div>
                    <p class="lead-text">Với hơn 10 năm kinh nghiệm trong lĩnh vực thiết kế và thi công nội thất, BMT Decor tự hào là đơn vị tiên phong mang đến những giải pháp sống hoàn hảo cho người Việt.</p>
                    <p class="normal-text">Từ những ngày đầu thành lập năm 2010, chúng tôi luôn nỗ lực không ngừng để cải tiến chất lượng dịch vụ, hợp tác với các đối tác uy tín trong và ngoài nước, ứng dụng công nghệ hiện đại vào quy trình sản xuất.</p>
                </div>
                <div class="col-lg-6">
                    <div class="about-image">
                        <img src="https://i.imgur.com/QD1uKHh.jpeg" alt="Văn phòng 347 Decor" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Core Values -->
    <section class="core-values bg-light">
        <div class="container">
            <h2 class="section-title text-center">Giá trị cốt lõi</h2>
            <div class="title-divider-center"></div>

            <div class="row value-items">
                <div class="col-md-3 value-item">
                    <div class="value-icon">
                        <i class="fas fa-medal"></i>
                    </div>
                    <h3>Chất lượng</h3>
                    <p>Cam kết sử dụng vật liệu cao cấp, đạt tiêu chuẩn quốc tế</p>
                </div>

                <div class="col-md-3 value-item">
                    <div class="value-icon">
                        <i class="fas fa-paint-roller"></i>
                    </div>
                    <h3>Sáng tạo</h3>
                    <p>Đội ngũ thiết kế trẻ trung, nhiệt huyết và sáng tạo không ngừng</p>
                </div>

                <div class="col-md-3 value-item">
                    <div class="value-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h3>Tiến độ</h3>
                    <p>Đảm bảo hoàn thành đúng thời hạn với quy trình chuyên nghiệp</p>
                </div>

                <div class="col-md-3 value-item">
                    <div class="value-icon">
                        <i class="fas fa-hand-holding-heart"></i>
                    </div>
                    <h3>Bảo hành</h3>
                    <p>Chính sách bảo hành dài hạn lên đến 5 năm cho mọi công trình</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="mission-vision">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mission">
                    <div class="mv-card">
                        <h2><i class="fas fa-bullseye"></i> Sứ mệnh</h2>
                        <p>Mang đến không gian sống hoàn hảo bằng sự sáng tạo không ngừng và chất lượng dịch vụ vượt trội</p>
                    </div>
                </div>
                <div class="col-md-6 vision">
                    <div class="mv-card">
                        <h2><i class="fas fa-eye"></i> Tầm nhìn</h2>
                        <p>Trở thành thương hiệu dẫn đầu về thiết kế và thi công nội thất tại Việt Nam vào năm 2025</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Milestones -->
    <section class="milestones-section bg-dark">
        <div class="container">
            <h2 class="section-title text-center text-light">Chặng đường phát triển</h2>
            <div class="title-divider-center"></div>

            <div class="row milestones">
                <div class="col-md-3 milestone">
                    <div class="milestone-number">2010</div>
                    <div class="milestone-text">Thành lập công ty</div>
                </div>
                <div class="col-md-3 milestone">
                    <div class="milestone-number">500+</div>
                    <div class="milestone-text">Dự án hoàn thành</div>
                </div>
                <div class="col-md-3 milestone">
                    <div class="milestone-number">50+</div>
                    <div class="milestone-text">Đối tác lớn</div>
                </div>
                <div class="col-md-3 milestone">
                    <div class="milestone-number">2024</div>
                    <div class="milestone-text">Mở rộng toàn quốc</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Team Section -->
    <section class="team-section">
        <div class="container">
            <h2 class="section-title text-center">Đội ngũ chuyên gia</h2>
            <div class="title-divider-center"></div>

            <div class="row team-members">
                <div class="col-md-3 member">
                    <div class="member-card">
                        <div class="member-photo">
                            <img src="https://via.placeholder.com/250x300" alt="CEO">
                            <div class="social-links">
                                <a href="#"><i class="fab fa-facebook"></i></a>
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                            </div>
                        </div>
                        <h3>Nguyễn Văn A</h3>
                        <p>CEO - Founder</p>
                    </div>
                </div>
                <!-- Thêm các thành viên khác -->
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section bg-primary">
        <div class="container text-center">
            <h2 class="text-light">Bắt đầu dự án của bạn ngay hôm nay!</h2>
            <p class="text-light">Liên hệ với chúng tôi để nhận tư vấn miễn phí</p>
            <a href="/lien-he" class="cta-button">LIÊN HỆ NGAY</a>
        </div>
    </section>
</div>

<style>
/* Custom Styles */
.about-hero {
    background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
                url('https://via.placeholder.com/1920x600') center/cover;
    height: 400px;
    display: flex;
    align-items: center;
}

.hero-title {
    color: #fff;
    font-size: 2.5rem;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 2px;
}

.section-title {
    font-size: 2rem;
    color: #333;
    position: relative;
    padding-bottom: 15px;
}

.title-divider {
    width: 60px;
    height: 3px;
    background: #e1b261;
    margin: 15px 0 30px;
}

.title-divider-center {
    width: 60px;
    height: 3px;
    background: #e1b261;
    margin: 15px auto 30px;
}

.introduction-section {
    padding: 80px 0;
}

.lead-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: #666;
    margin-bottom: 25px;
}

.normal-text {
    color: #777;
    line-height: 1.8;
}

.core-values {
    padding: 80px 0;
}

.value-item {
    text-align: center;
    padding: 30px;
}

.value-icon {
    width: 80px;
    height: 80px;
    background: #e1b261;
    border-radius: 50%;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 30px;
    transition: all 0.3s;
}

.value-item:hover .value-icon {
    transform: translateY(-10px);
}

.mission-vision {
    padding: 80px 0;
}

.mv-card {
    padding: 40px;
    background: #fff;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    border-radius: 10px;
    height: 100%;
}

.mv-card h2 {
    color: #e1b261;
    font-size: 1.5rem;
    margin-bottom: 20px;
}

.milestones-section {
    padding: 80px 0;
}

.milestone {
    text-align: center;
    color: #fff;
    padding: 30px;
}

.milestone-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #e1b261;
    margin-bottom: 10px;
}

.team-section {
    padding: 80px 0;
}

.member-card {
    text-align: center;
    margin-bottom: 30px;
}

.member-photo {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
}

.member-photo img {
    transition: transform 0.3s;
}

.member-photo:hover img {
    transform: scale(1.05);
}

.social-links {
    position: absolute;
    bottom: -40px;
    left: 0;
    right: 0;
    transition: all 0.3s;
    background: rgba(0,0,0,0.6);
    padding: 10px;
}

.member-card:hover .social-links {
    bottom: 0;
}

.cta-section {
    padding: 60px 0;
}

.cta-button {
    display: inline-block;
    background: #e1b261;
    color: #fff;
    padding: 15px 40px;
    border-radius: 30px;
    text-transform: uppercase;
    font-weight: 700;
    transition: all 0.3s;
}

.cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

media (max-width: 768px) {
    .hero-title {
        font-size: 1.8rem;
    }

    .value-item {
        margin-bottom: 30px;
    }

    .milestone {
        margin-bottom: 30px;
    }
}
</style>
@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
