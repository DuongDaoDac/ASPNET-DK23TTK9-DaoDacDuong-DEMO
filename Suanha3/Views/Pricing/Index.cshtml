@model IEnumerable<Suanha3.Models.Pricing>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Tên dịch vụ</th>
        <th>Giá</th>
        <th>Hành động</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ServiceName</td>
            <td>@String.Format("{0:N0} VNĐ", item.UnitPrice)</td>
            <td>
                <a href="@Url.Action("Details", "Pricing", new { id = item.Id })" class="btn btn-info btn-sm">Chi tiết</a>
                <a href="@Url.Action("Edit", "Pricing", new { id = item.Id })" class="btn btn-warning btn-sm">Sửa</a>
                <a href="@Url.Action("Delete", "Pricing", new { id = item.Id })" class="btn btn-danger btn-sm">Xóa</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="@Url.Action("Create", "Pricing")">Thêm dịch vụ mới</a>
